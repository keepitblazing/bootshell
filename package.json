{
  "name": "bootshell",
  "displayName": "bootshell",
  "description": "bootshell",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bootshell.promptLocation",
        "title": "Auto Terminal: Choose Location"
      },
      {
        "command": "bootshell.autoOpen",
        "title": "Auto Terminal: Open Saved Location"
      },
      {
        "command": "bootshell.start",
        "title": "Auto Terminal: Start"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Auto Terminal",
      "properties": {
        "autoTerminal.location": {
          "type": "string",
          "enum": [
            "editor",
            "panel"
          ],
          "default": "editor",
          "description": "Terminal location (editor = right, panel = bottom)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
